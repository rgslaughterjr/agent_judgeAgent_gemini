{
    "system_name": "Production Microservices Platform",
    "environment": "production",
    "owner": "DevOps Team",
    "last_audit": "2024-11-01",
    "compliance_frameworks": [
        "SOC2",
        "ISO27001"
    ],
    "architecture": {
        "type": "microservices",
        "container_orchestration": "kubernetes",
        "service_mesh": "istio",
        "total_services": 47,
        "critical_services": 12
    },
    "security_controls": {
        "encryption": {
            "at_rest": {
                "enabled": true,
                "algorithm": "AES-256",
                "key_rotation_days": 90,
                "key_management": "HashiCorp Vault"
            },
            "in_transit": {
                "enabled": true,
                "tls_version": "1.3",
                "certificate_expiry": "2025-05-20",
                "mutual_tls": true
            }
        },
        "authentication": {
            "mfa_enabled": true,
            "mfa_enforcement": "required",
            "password_policy": {
                "min_length": 12,
                "complexity": "high",
                "rotation_days": 90,
                "history": 10
            },
            "session_management": {
                "timeout_minutes": 30,
                "idle_timeout_minutes": 10,
                "concurrent_sessions": 2
            },
            "sso_enabled": true,
            "oauth2_oidc": true
        },
        "network": {
            "firewall_enabled": true,
            "waf_enabled": true,
            "ddos_protection": true,
            "allowed_ports": [
                443,
                8443
            ],
            "ssh_access": {
                "enabled": true,
                "key_based_only": true,
                "allowed_ips": [
                    "10.0.0.0/8"
                ],
                "bastion_host": true
            },
            "network_segmentation": true,
            "zero_trust_architecture": "partial"
        },
        "logging_monitoring": {
            "centralized_logging": true,
            "log_retention_days": 180,
            "siem_integration": true,
            "real_time_alerts": true,
            "audit_trail": true,
            "log_aggregation": "ELK Stack",
            "apm_enabled": true,
            "distributed_tracing": true
        },
        "access_control": {
            "rbac_enabled": true,
            "least_privilege": true,
            "privileged_access_management": true,
            "regular_access_reviews": true,
            "review_frequency_days": 90,
            "service_accounts_managed": true,
            "secrets_management": "HashiCorp Vault"
        },
        "vulnerability_management": {
            "automated_scanning": true,
            "scan_frequency": "daily",
            "patch_management": "automated",
            "critical_patch_sla_hours": 24,
            "high_patch_sla_hours": 72,
            "container_scanning": true,
            "dependency_scanning": true,
            "sast_enabled": true,
            "dast_enabled": true
        },
        "data_protection": {
            "backup_enabled": true,
            "backup_frequency": "hourly",
            "backup_retention_days": 90,
            "backup_encryption": true,
            "disaster_recovery_tested": true,
            "rto_hours": 2,
            "rpo_hours": 1,
            "geo_redundancy": true
        },
        "container_security": {
            "image_scanning": true,
            "runtime_protection": true,
            "pod_security_policies": true,
            "network_policies": true,
            "secrets_encrypted": true,
            "immutable_infrastructure": true
        },
        "ci_cd_security": {
            "pipeline_security": true,
            "code_signing": true,
            "artifact_scanning": true,
            "deployment_approval": true,
            "rollback_capability": true
        }
    },
    "compliance_status": {
        "overall": "compliant",
        "last_assessment": "2024-11-01",
        "findings": [
            "INFO: Zero trust architecture partially implemented",
            "LOW: Some legacy services not using service mesh",
            "LOW: Container runtime security could be enhanced"
        ],
        "remediation_items": [
            "Complete zero trust architecture rollout",
            "Migrate remaining services to service mesh",
            "Implement enhanced runtime security for containers"
        ],
        "strengths": [
            "Comprehensive security controls",
            "Automated vulnerability management",
            "Strong encryption everywhere",
            "Excellent logging and monitoring",
            "Regular DR testing",
            "Modern DevSecOps practices"
        ]
    }
}