{
  "system_name": "E-Commerce Web Application",
  "environment": "production",
  "owner": "Engineering Team",
  "last_audit": "2024-11-15",
  "compliance_frameworks": ["PCI-DSS", "SOC2", "GDPR"],
  
  "security_controls": {
    "encryption": {
      "at_rest": {
        "enabled": true,
        "algorithm": "AES-256-GCM",
        "key_rotation_days": 90,
        "key_management": "AWS KMS"
      },
      "in_transit": {
        "enabled": true,
        "tls_version": "1.3",
        "certificate_expiry": "2025-06-01"
      }
    },
    
    "authentication": {
      "mfa_enabled": true,
      "mfa_enforcement": "required",
      "password_policy": {
        "min_length": 14,
        "complexity": "high",
        "rotation_days": 90,
        "history": 12
      },
      "session_management": {
        "timeout_minutes": 15,
        "idle_timeout_minutes": 5,
        "concurrent_sessions": 1
      }
    },
    
    "network": {
      "firewall_enabled": true,
      "waf_enabled": true,
      "ddos_protection": true,
      "allowed_ports": [443],
      "ssh_access": {
        "enabled": true,
        "key_based_only": true,
        "allowed_ips": ["10.0.0.0/8"]
      }
    },
    
    "logging_monitoring": {
      "centralized_logging": true,
      "log_retention_days": 365,
      "siem_integration": true,
      "real_time_alerts": true,
      "audit_trail": true
    },
    
    "access_control": {
      "rbac_enabled": true,
      "least_privilege": true,
      "privileged_access_management": true,
      "regular_access_reviews": true,
      "review_frequency_days": 90
    },
    
    "vulnerability_management": {
      "automated_scanning": true,
      "scan_frequency": "weekly",
      "patch_management": "automated",
      "critical_patch_sla_hours": 24,
      "high_patch_sla_hours": 72
    },
    
    "data_protection": {
      "backup_enabled": true,
      "backup_frequency": "daily",
      "backup_retention_days": 90,
      "backup_encryption": true,
      "disaster_recovery_tested": true,
      "rto_hours": 4,
      "rpo_hours": 1
    }
  },
  
  "compliance_status": {
    "overall": "compliant",
    "last_assessment": "2024-11-15",
    "findings": [],
    "remediation_items": []
  }
}
